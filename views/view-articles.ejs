<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/articles/create-art">Créer un article</a></li>
                <li><a href="/articles">Accueil</a></li>
                <li><a href="/users/logout">Se déconnecter</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <h1>Articles Disponibles</h1>
        <div class="articles-list">
            <% articles.forEach(article => { %>
                <div class="article">
                    <div class="image-container">
                        <img src="<%= article.image %>" alt="<%= article.name %>">
                    </div>
                    <a href="/articles/article/<%= article.id %>">
                        <h2><%= article.name %></h2>
                    </a>
                    <p class="description" id="desc-<%= article.id %>"><%= article.description %></p>
                    <p class="price"><%= article.price %> €</p>
                    <p>Quantité disponible: <%= article.quantity %></p>
                </div>
            <% }); %>
        </div>
    </div>
    <footer class="footer">
        <p>© 2024 Theoinc</p>
    </footer>

    <script>
        function toggleDescription(id) {
            const desc = document.getElementById(`desc-${id}`);
            const readMore = desc.nextElementSibling;
            
            if (desc.classList.contains('expanded')) {
                desc.classList.remove('expanded');
                readMore.textContent = 'Voir plus';
            } else {
                desc.classList.add('expanded');
                readMore.textContent = 'Voir moins';
            }
        }
    </script>
</body>
</html>